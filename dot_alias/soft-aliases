# Neovim
alias nv="nvim"
alias cfgnv="cedit ~/.config/nvim"
alias cdnv="cd ~/.config/nvim"

# Kitty
alias cfgkt="cedit ~/.config/kitty"
alias cdkt="cd ~/.config/kitty"
alias kdiff="kitty +kitten diff"
alias ktsh="kittysh && exit"

alias lg="lazygit"
alias c="chezmoi"
alias tms="tmux-sessionizer"
alias rr="caffeinate git pull --rebase && mix do deps.get, ecto.migrate"
alias rrt="caffeinate git pull --rebase && mix do deps.get, ecto.migrate && MIX_ENV=test mix ecto.migrate"
alias mixt="direnv deny; MIX_ENV=test iex -S mix; direnv allow"
alias asdf="mise"
