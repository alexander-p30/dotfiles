# vim:foldmethod=marker

# oh-my-zsh {{{
export ZSH="$HOME/.oh-my-zsh"

# Theme

plugins=(
	asdf
  docker-compose
	git
	zsh-syntax-highlighting
	zsh-autosuggestions	
)

source $ZSH/oh-my-zsh.sh
# }}}

# User configuration {{{
# File sourcing {{{
source ~/.alias/git-aliases
source ~/.alias/rails-aliases
source ~/.alias/soft-aliases
source ~/.alias/system-aliases

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
# }}}

# Prompt {{{
eval "$(starship init zsh)"
# }}}
# }}}

# Keep IEx history
export ERL_AFLAGS="-kernel shell_history enabled"

compdef remotectl
compdef _remotectl remotectl
source <(remotectl completion zsh)

TEMP_RUN=$RUN
export RUN=
eval "$TEMP_RUN" # run arbitrary commands ```RUN='echo "it works"' zsh```
