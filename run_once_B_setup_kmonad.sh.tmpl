#! /bin/bash

{{- if eq .chezmoi.os "darwin" }}
exit 0
{{- end}}

echo "============================"
echo ":: Setting up kmonad"

# Create input group
if getent group input; then
  echo "丘멆잺  input group exists"
else
  sudo groupadd input
  echo "游릭 Created input group"
fi

# Add user to input group
if echo $(id -nG $USER) | grep -w "input"; then
  echo "丘멆잺  $USER already in input group"
else
  sudo usermod -aG input $USER
  echo "游릭 Added $USER to input group"
fi

# Create uinput group
if getent group uinput; then
  echo "丘멆잺  uinput group exists"
else
  sudo groupadd uinput
  echo "游릭 Created uinput group"
fi

# Add user to uinput group
if echo $(id -nG $USER) | grep -w "uinput"; then
  echo "丘멆잺  $USER already in uinput group"
else
  sudo usermod -aG uinput $USER
  echo "游릭 Added $USER to uinput group"
fi

FILE=/etc/udev/rules.d/50-kmonad.rules
if ! test -f "$FILE"; then
  echo -e "\t游릭 $FILE does not exist, creating it..."
  sudo touch $FILE
  sudo tee $FILE <<EOL
KERNEL=="uinput", MODE="0660", GROUP="uinput", OPTIONS+="static_node=uinput"
EOL
else
  echo -e "丘멆잺  File already exists, aborting..."
fi

echo ":: Starting kmonad..."
bash "$(chezmoi source-path)/dot_scripts/executable_keebs.sh"
echo "游릭 Finished setting up kmonad"
